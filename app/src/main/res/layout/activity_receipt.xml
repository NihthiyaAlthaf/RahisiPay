<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Receipt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/logo_url" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textColor="@color/dark_silver1"
                    android:id="@+id/service_name"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    android:text="Water Payment"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/dark_silver1"
                    android:gravity="left"
                    android:id="@+id/service_provider"
                    android:textSize="12sp"
                    android:text="Water"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/silver"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="@string/amount_paid"
                android:textSize="10dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/amount_paid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/custom_font"
                android:text="54545"
                android:gravity="center_horizontal"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_time"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingRight="15dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_silver1"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:layout_weight="1"
                android:text="54545"
                android:gravity="left"
                android:textColor="@color/dark_silver1"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/receipt_no"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingRight="15dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_silver1"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/receipt_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:layout_weight="1"
                android:text="54545"
                android:gravity="left"
                android:textColor="@color/dark_silver1"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transaction_no"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingRight="15dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_silver1"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/transaction_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:layout_weight="1"
                android:text="54545"
                android:gravity="left"
                android:textColor="@color/dark_silver1"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paid_to"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingRight="15dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_silver1"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/paid_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:layout_weight="1"
                android:text="54545"
                android:gravity="left"
                android:textColor="@color/dark_silver1"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/service_acc_no"
                android:textSize="14dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="15dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/dark_silver1"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/service_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/custom_font"
                android:layout_weight="1"
                android:text="54545"
                android:gravity="left"
                android:textColor="@color/dark_silver1"
                android:textSize="14sp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_box"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/custom_font"
                android:text="@string/other_charge"
                android:background="@color/silver_text"
                android:textColor="@color/darkorange"
                android:gravity="center"
                android:textSize="17sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/custom_font"
                    android:text="@string/service_charge"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/service_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/custom_font"
                    android:paddingLeft="10dp"
                    android:text="null"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:fontFamily="@font/custom_font"
                    android:text="@string/vat"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/vat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/custom_font"
                    android:paddingLeft="10dp"
                    android:text="null"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>




        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_height="35dp"
            android:textColor="@color/red"
            android:text="@string/close"
            android:textSize="15sp"
            android:background="@drawable/custom_btn_cancel"
            android:fontFamily="@font/custom_font"
            android:textAllCaps="false"
            android:id="@+id/close"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>