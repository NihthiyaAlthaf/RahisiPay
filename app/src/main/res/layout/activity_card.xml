<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BlockCard"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:orientation="vertical">


            <ImageView
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:textSize="19sp"
                android:fontFamily="@font/custom_font"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:background="@drawable/rahisi_card"
                android:text="@string/block_card_reason"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter PIN Number"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/custom_font"
                android:id="@+id/reason"
                android:hint="PIN"
                android:password="true"
                android:singleLine="true"
                android:nextFocusDown="@+id/submit"
                android:padding="15dp"
                android:background="@drawable/custom_edt"
                android:layout_marginRight="30dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/submit"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="19sp"
                android:fontFamily="@font/custom_font"
                android:text="@string/ok"
                android:layout_gravity="center"
                android:background="@drawable/custom_log_btn"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>